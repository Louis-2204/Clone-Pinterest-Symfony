{% extends 'layouts/base.html.twig' %}

{% block title'Register' %}

{% block body %}
	<div class="row">
		<div class="col-md-6 mx-auto">
			<h1 class="my-5 text-center">Create an account</h1>

			{{ form_start(registrationForm) }}
			<div class="mb-3 row">
				<div class="col-md-6">
					{{ form_row(registrationForm.firstName) }}
				</div>
				<div class="col-md-6">
					{{ form_row(registrationForm.lastName) }}
				</div>
			</div>
			<div class="mb-3">
				{{ form_row(registrationForm.email) }}
			</div>
			<div class="mb-3">
				{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
			</div>
			<div class="mb-3">
				{{ form_row(registrationForm.agreeTerms) }}
			</div>

			<button type="submit" class="btn btn-primary btn-lg col-12" formnovalidate>Register</button>
			<p class="mt-5 text-center text-muted">Already registered?
				<a href=" {{ path('app_login') }} ">Log in</a>
			</p>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
