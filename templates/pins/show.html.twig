{% extends 'layouts/base.html.twig' %}

{% block title pin.title %}

{% block body %}
	<div class="row">
		<div class="col-md-6 mx-auto">
			<article class="bg-white rounded shadow pin">
				<div class="mw-100 rounded-top overflow-hidden">
					<img src="{{ (pin.imageNAme ? vich_uploader_asset(pin) : asset ('images/placeholder.jpg' )) | imagine_filter('squared_thumbnail_medium') }}" alt="{{ pin.title }}" class="w-100">
				</div>
				<div class="p-4">
					<h1 class="h4 text-secondary">
						{{ pin.title }}
					</h1>
					<p class="text-muted">
						<small>Submitted
							{{ pin.createdAt|ago }}
							by
							{{ pin.user.fullName }}</small>
					</p>
					<p class="pt-3 text-break">
						{{ pin.description }}
					</p>

					<div class="pt-3">
						<a href="{{ path('app_pins_edit', {id: pin.id}) }}" class="btn btn-light text-decoration-none">Edit</a>

						<a href="{{ path('app_pins_delete', {id: pin.id}) }}" class="btn btn-light text-decoration-none" onclick="return confirm('Are you sure ?')">Delete</a>
					</div>
				</div>
			</article>
		</div>
	</div>

{% endblock %}
